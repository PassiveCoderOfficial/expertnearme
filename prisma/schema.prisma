generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                Int                @id @default(autoincrement())
  email             String             @unique
  password          String
  role              Role               @default(USER)
  verified          Boolean            @default(false)
  createdAt         DateTime           @default(now())
  updatedAt         DateTime           @updatedAt
  name              String             @default("Unknown")
  auditLogs         AuditLog[]
  tokens            AuthToken[]
  bookings          Booking[]
  notifications     Notification[]
  reviews           Review[]
  profile           UserProfile?
  media             Media[]
  pushSubscriptions PushSubscription[]
}

model UserProfile {
  id        Int      @id @default(autoincrement())
  userId    Int      @unique
  name      String?
  phone     String?
  avatar    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id])
}

model Setting {
  id        Int      @id @default(autoincrement())
  key       String   @unique
  value     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Media {
  id           Int      @id @default(autoincrement())
  url          String // path or external storage URL
  filename     String
  mimetype     String
  size         Int
  uploadedById Int
  uploadedBy   User     @relation(fields: [uploadedById], references: [id])
  createdAt    DateTime @default(now())
  folder       String? // optional folder name (e.g. userId or "admin")
  tags         String? // optional comma-separated tags

  @@index([uploadedById])
  @@index([createdAt])
  @@index([folder])
}

model AuthToken {
  id        Int       @id @default(autoincrement())
  userId    Int
  token     String    @unique
  type      TokenType
  expiresAt DateTime
  createdAt DateTime  @default(now())
  user      User      @relation(fields: [userId], references: [id])
}

model Expert {
  id             Int      @id @default(autoincrement())
  profileLink    String? @unique
  name           String
  email          String   @unique
  phone          String?
  whatsapp       String? // separate WhatsApp if different
  isBusiness     Boolean  @default(false)
  businessName   String? // for business accounts
  contactPerson  String? // if business
  officeAddress  String?
  webAddress     String? // badge if verified
  mapLocation    String? // lat/lng or Google Maps link
  profilePicture String?
  coverPhoto     String?
  shortDesc      String?
  featured       Boolean  @default(false)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  categories ExpertCategory[]
  services   Service[]
  portfolio  Portfolio[]
  reviews    Review[]
  bookings   Booking[]
}

model Service {
  id          Int     @id @default(autoincrement())
  expertId    Int
  name        String
  image       String?
  description String?
  rateUnit    String? // optional toggle
  expert      Expert  @relation(fields: [expertId], references: [id])
}

model Portfolio {
  id        Int     @id @default(autoincrement())
  expertId  Int
  imageUrl  String?
  videoUrl  String?
  socialUrl String?
  expert    Expert  @relation(fields: [expertId], references: [id])
}

model Category {
  id             Int              @id @default(autoincrement())
  name           String           @db.VarChar(100)
  slug           String           @unique @db.VarChar(100)
  updatedAt      DateTime         @updatedAt
  parentId       Int?
  createdAt      DateTime         @default(now())
  showOnHomepage Boolean          @default(false)
  parent         Category?        @relation("CategoryParent", fields: [parentId], references: [id])
  children       Category[]       @relation("CategoryParent")
  experts        ExpertCategory[]

  @@index([parentId])
  @@index([slug])
}

model ExpertCategory {
  expertId   Int
  categoryId Int
  category   Category @relation(fields: [categoryId], references: [id])
  expert     Expert   @relation(fields: [expertId], references: [id])

  @@id([expertId, categoryId])
}

model Booking {
  id          Int           @id @default(autoincrement())
  expertId    Int
  clientId    Int
  status      BookingStatus @default(PENDING)
  scheduledAt DateTime
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  client      User          @relation(fields: [clientId], references: [id])
  expert      Expert        @relation(fields: [expertId], references: [id])
  reviews     Review[]
}

model Review {
  id        Int      @id @default(autoincrement())
  bookingId Int
  expertId  Int
  clientId  Int
  rating    Int
  comment   String?
  createdAt DateTime @default(now())
  booking   Booking  @relation(fields: [bookingId], references: [id])
  client    User     @relation(fields: [clientId], references: [id])
  expert    Expert   @relation(fields: [expertId], references: [id])
}

model PushSubscription {
  id        Int      @id @default(autoincrement())
  userId    Int
  browser   String?
  device    String?
  endpoint  String   @unique
  p256dh    String
  auth      String
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
}

model Notification {
  id        Int      @id @default(autoincrement())
  userId    Int
  title     String
  message   String
  read      Boolean  @default(false)
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
}

model AuditLog {
  id        Int      @id @default(autoincrement())
  userId    Int?
  action    String
  entity    String?
  entityId  Int?
  createdAt DateTime @default(now())
  user      User?    @relation(fields: [userId], references: [id])
}

enum Role {
  USER
  EXPERT
  ADMIN
}

enum TokenType {
  EMAIL_VERIFICATION
  PASSWORD_RESET
  SESSION
}

enum BookingStatus {
  PENDING
  APPROVED
  DECLINED
  RESCHEDULED
  DONE
}
